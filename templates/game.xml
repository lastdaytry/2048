<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">

    <div class="header">
      <h1 class="header__title">2048, again</h1>
      <h2 class="header__current">Your grid:</h2>
    </div>

    <a href="#" class="js-back button">&#9664; Back</a>

    <div class="token">
        <div class="token__text">Token:</div>
        <div id="token" class="token__content"></div>
    </div>

    <div class="container" style="display: none;">
        <div class="score-container">0</div>
        <div class="grid-container"></div>
        <div class="tile-container"></div>
    </div>

<!-- Modal GameOver -->
    <div class="game__gameover"></div>
    <div class="overlay"></div>

</fest:template>
